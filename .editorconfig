# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JSON files (package.json, composer.json, etc.)
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# PHP files
[*.php]
indent_style = space
indent_size = 4

# JavaScript/TypeScript files
[*.{js,mjs,cjs,ts,mts,cts}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4
